                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Updated"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Fournisseurs"
                ],
                "summary": "Supprimer fournisseur",
                "operationId": "0b68bc0ebcd90fce5fb69d3fec4194b6",
